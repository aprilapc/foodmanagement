@model IEnumerable<_04156258.Models.Satisfaction>
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    int id = ViewBag.FBid;
    string sort = ViewBag.Sort;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MealsAndDiscount.MealsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member.MemberName)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MealsAndDiscount.MealsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberName)
            </td>
        </tr>
    }
    
</table>
<p>
    @Html.ActionLink("給評價", "Feedback", new { id = id }) | @Html.ActionLink("Back to List", "Index", "MealsAndDiscounts", new { sort = sort })
</p>

